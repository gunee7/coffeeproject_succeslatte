<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/beverage1_icestrawberrysmoodi"/>

        <TextView
            android:id="@+id/coffee_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@array/menu_latte_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/slide_title1"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/coffeepayText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/slide_title2"
            android:textStyle="bold"
            android:text="3400원"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/bg_screen2"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/menu_size_sizeup"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/slide_title2"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="(500원)"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/slide_title2"
                    android:textStyle="bold"
                    android:visibility="invisible"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:orientation="vertical">


                <Button
                    android:id="@+id/coffeepaySizwupText"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/bg_screen2"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/slide_title2"
                    android:textStyle="bold"
                    android:text="+500"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"/>

            <EditText
                android:id="@+id/count_number"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center"
                android:text="1"
                android:textColor="@color/bg_screen4"
                android:focusable="false"/>

            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_go_cart"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/bg_screen10"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="주문표에 넣기"/>

            <!--<Button
                android:id="@+id/btn_go_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bg_screen4"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="바로 결제하기"/>-->

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>